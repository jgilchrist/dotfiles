[user]
    name = Jonny Gilchrist
    email = jonnygilchrist@gmail.com
[color]
    ui = auto
[color "branch"]
    remote = yellow
[core]
    editor = vim
    pager = less -FXRS
    excludesfile = ~/.gitignore_global
    autocrlf = input
    whitespace = trailing-space,space-before-tab
[diff]
    algorithm = patience
    renames = copies
    mnemonicprefix = true
[push]
    default = simple
[alias]
    create = !git init && git commit --allow-empty -m \"Created repository\"

    aa = add --all
    au = add -u
    ap = add -p

    amend = commit --amend

    s = status -s
    st = status

    ci = commit
    cm = commit -m

    co = checkout
    b = branch

    di = diff
    dc = diff --cached
    dl = diff HEAD^
    dw = diff --color-words
    ds = diff --stat

    rh = reset HEAD

    head = !git l -1
    h = !git head

    prettylog = log --oneline --abbrev-commit --graph --decorate
    l = !git prettylog -10
    la = !git prettylog --all -10
    ll = !git prettylog --all
