[user]
    name = Jonny Gilchrist
    email = jonnygilchrist@gmail.com

[core]
    editor = vim
    pager = less -FXRS
    excludesfile = ~/.gitexcludes
    autocrlf = input

[commit]
    verbose = true

[fetch]
    prune = true

[branch]
    # Always use rebase instead of merge when pulling branches
    autosetuprebase = always

[push]
    default = simple

[pull]
    ff = only

[diff]
    indentHeuristic = true
    mnemonicprefix = true

[merge]
    conflictstyle = diff3

[rebase]
    stat = true
    autosquash = true
    autostash = true

[rerere]
    enabled = true

[stash]
    showPatch = true

[color]
    ui = auto

[alias]
    aa = add --all
    ap = add -p
    au = add -u
    b  = branch
    ci = commit
    co = checkout
    di = diff
    ds = diff --staged
    rh = reset HEAD
    s  = status -sb

    amend = commit --amend
    bnew = checkout -b
    create = !git init && git commit --allow-empty -m \"Created repository\"
    restage = update-index --again
    up = !git push --set-upstream origin "$(git rev-parse --abbrev-ref HEAD)"

    assumed = !git ls-files -v | grep "^[[:lower:]]"
    merged = !git branch --merged | grep -v "\\*"
    root = !pwd
    tracking = !git rev-parse --abbrev-ref '@{u}'

    prettylog = log --oneline --graph --format='%C(green)%h%C(auto)%d%C(reset) %s %C(yellow)(%cr)%C(reset) %C(blue)<%an>%C(reset)'
    lg = !git prettylog
    l = !git prettylog -10
    ll = !git prettylog --all
    lo = !git prettylog `git tracking`^.. # Show the log since the origin/master commit
    head = !git prettylog -1

[url "git@github.com:jgilchrist/"]
    insteadOf = gh:
[url "git@bitbucket.org:jgilchrist/"]
    insteadOf = bb:
[url "git@github.com:"]
    insteadOf = github:
[url "git@bitbucket.org:"]
    insteadOf = bitbucket:

[include]
    path = ~/.gitconfig.local
