[user]
    name = Jonny Gilchrist
    email = jonnygilchrist@gmail.com

[core]
    editor = vim
    pager = less -FXRS
    excludesfile = ~/.gitignore_global
    autocrlf = input
    whitespace = trailing-space,space-before-tab

[branch]
    # Always use rebase instead of merge when pulling branches
    autosetuprebase = always

[push]
    default = simple

[diff]
    algorithm = patience
    renames = copies
    mnemonicprefix = true

[color]
    ui = auto
[color "branch"]
    remote = yellow

[alias]
    create = !git init && git commit --allow-empty -m \"Created repository\"

    aa = add --all
    au = add -u
    ap = add -p

    rh = reset HEAD

    amend = commit --amend

    s = status -s
    st = status

    ci = commit

    co = checkout
    b = branch
    bnew = checkout -b

    di = diff
    dc = diff --staged
    ds = diff --staged
    dl = show -p HEAD --oneline --stat
    dw = diff --color-words

    assumed = !git ls-files -v | grep "^[[:lower:]]"

    up = !git push --set-upstream origin "$(git rev-parse --abbrev-ref HEAD)"
    merged = !git branch --merged | grep -v "\\*" | grep -v "master"

    prettylog = log --oneline --abbrev-commit --graph --decorate
    l = !git prettylog -10
    la = !git prettylog --all -10
    ll = !git prettylog --all

[url "git@github.com:"]
    insteadOf = github:
[url "git@bitbucket.org:"]
    insteadOf = bitbucket:

[advice]
    pushNonFastForward = false
    statusHints = false
    detachedHead = false
    ; commitBeforeMerge = false
    ; resolveConflict = false
    ; implicitIdentity = false

[rebase]
    autosquash = true
