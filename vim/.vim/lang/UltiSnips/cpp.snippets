extends c

snippet class "class .. (class)"
class ${1:`!p snip.rv = snip.basename.capitalize() or "name"`} {
public:
	${1/(\w+).*/$1/}(${2:arguments});
	virtual ~${1/(\w+).*/$1/}();

private:
	${0:/* data */}
};
endsnippet

snippet ns "namespace .. (namespace)"
namespace${1/.+/ /m}${1:`!p snip.rv = snip.basename or "name"`} {
	${VISUAL}${0}
}
endsnippet

snippet tp "template <typename ..> (template)"
template <typename ${1}>
$0
endsnippet
