#
# A virtualenv prompt element which can be added to a bash prompt.
#

function prompt_virtualenv() {
    if [[ -n "$VIRTUAL_ENV" ]]; then
        venv="${VIRTUAL_ENV##*/}"
    else
        venv=""
    fi

    [[ -n "$venv" ]] && echo " (venv:$venv)"
}

export VIRTUAL_ENV_DISABLE_PROMPT=1

# vim: ft=sh
