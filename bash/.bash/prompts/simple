#!/bin/bash

. ${HOME}/.bash/colors
. ${HOME}/.bash/prompts/elements/git
. ${HOME}/.bash/prompts/elements/virtualenv

E_BLUE=$(color_escape $BLUE)
E_GREEN=$(color_escape $GREEN)
E_VIOLET=$(color_escape $VIOLET)
E_RESET=$(color_escape $RESET)

function set_prompt() {
    PS1="\n ${E_BLUE}\w${E_RESET} $(prompt_git)$(prompt_virtualenv) ${E_GREEN}Â»${E_RESET} "
}

PROMPT_COMMAND="set_prompt; $PROMPT_COMMAND"
