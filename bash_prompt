#!/bin/bash

. ${HOME}/.bash_colors

GIT_PROMPT_SCRIPT_LOC=${HOME}/bin/git-prompt.sh

PS1="\n"

PS1+="${BLUE}\u"
PS1+="${RESET} "
PS1+="at ${GREEN}\h"
PS1+="${RESET} "
PS1+="in ${YELLOW}\w"
PS1+="${RESET} "
if [ -f $GIT_PROMPT_SCRIPT_LOC ]; then
    source $GIT_PROMPT_SCRIPT_LOC
    PS1+="\$(__git_ps1 '(${VIOLET}%s${RESET})')"
else
    echo 'Cannot load ~/bin/git-prompt.sh: Prompt will not contain the current git branch.'
fi
PS1+="\n"
PS1+="% "
